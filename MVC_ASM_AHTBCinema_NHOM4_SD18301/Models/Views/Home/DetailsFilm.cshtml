<style>
    .black-bg {
        background-color: #000;
        color: #fff;
        padding: 10px;
        margin-bottom: 20;
        display: flex;
        /* Sử dụng Flexbox */
        justify-content: space-between;
        /* Căn cách đều hai phần tử */
        align-items: center;
        /* Căn giữa theo chiều dọc */
    }

    .trailer-button {
        order: 2;
        border-radius: 50px;
        /* Độ cong lớn để tạo hình elip */
        border: none;
        /* Xóa border mặc định */
        padding: 10px 20px;
        /* Điều chỉnh khoảng cách để vừa với hình elip */
    }

    .movie-details {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
    }

    .floating-btn {
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 4px 5px rgba(75, 85, 96, 0.7);
    }

        .floating-btn:hover {
            transform: translateY(-3px);
            box-shadow: 1px 1px 5px 5px rgba(101, 101, 106, 0.9);
        }
</style>
<script>
    document.getElementById('cinema-info').addEventListener('click', function () {
        var showtimesDiv = document.getElementById('showtimes');
        if (showtimesDiv.style.display === 'none') {
            showtimesDiv.style.display = 'block';
        } else {
            showtimesDiv.style.display = 'none';
        }
    });
    $(document).ready(function () {
        // Add focus and blur events to the button for hover effect
        $(".floating-btn").on("mouseenter", function () {
            $(this).css({ "transform": "translateY(-3px)", "box-shadow": "0px 7px 10px rgba(0, 123, 255, 0.9)" });
        }).on("mouseleave", function () {
            $(this).css({ "transform": "translateY(0px)", "box-shadow": "0px 4px 5px rgba(0, 123, 255, 0.7)" });
        });
    });
</script>